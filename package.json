{
  "name": "listr2",
  "version": "1.0.0-development",
  "description": "Terminal task list reborn!",
  "license": "MIT",
  "repository": "https://github.com/cenk1cenk2/listr2",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "author": {
    "name": "Cenk Kilic",
    "email": "cenk@kilic.dev",
    "url": "https://srcs.kilic.dev"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "scripts": {
    "prebuild": "rimraf tsconfig.build.tsbuildinfo && rimraf dist/",
    "build": "tsc && tscpaths -p tsconfig.paths.json -s ./dist -o ./dist",
    "lint": "yarn lint:staged src/",
    "lint:staged": "eslint --ext .json,.ts,.js --fix",
    "test": "NODE_ENV=test ts-node -P tests/tsconfig.json -r tsconfig-paths/register node_modules/jest/bin/jest.js --config ./tests/jest.js",
    "test:cov": "NODE_ENV=test ts-node -P tests/tsconfig.json -r tsconfig-paths/register node_modules/jest/bin/jest.js --coverage --config ./tests/jest.js",
    "dev:test": "NODE_ENV=test ts-node -P tests/tsconfig.json -r tsconfig-paths/register node_modules/jest/bin/jest.js --verbose --watchAll --config ./tests/jest.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "lint-staged": {
    "src/*.{ts,js, json}": [
      "yarn lint"
    ]
  },
  "keywords": [
    "listr",
    "cli",
    "task",
    "list",
    "tasklist",
    "terminal",
    "term",
    "console",
    "ascii",
    "unicode",
    "loading",
    "indicator",
    "progress",
    "busy",
    "wait",
    "idle"
  ],
  "dependencies": {
    "@samverschueren/stream-to-observable": "^0.3.0",
    "chalk": "^4.0.0",
    "cli-cursor": "^3.1.0",
    "cli-truncate": "^2.1.0",
    "elegant-spinner": "^2.0.0",
    "enquirer": "^2.3.5",
    "figures": "^3.2.0",
    "indent-string": "^4.0.0",
    "log-update": "^4.0.0",
    "p-map": "^4.0.0",
    "pad": "^3.2.0",
    "rxjs": "^6.5.5",
    "through": "^2.3.8",
    "uuid": "^8.0.0"
  },
  "devDependencies": {
    "@cenk1cenk2/eslint-config": "0.2.1",
    "@types/jest": "^25.2.1",
    "@types/node": "^13.13.4",
    "@types/rewire": "^2.5.28",
    "cz-conventional-changelog": "3.1.0",
    "delay": "^4.3.0",
    "eslint": "^6.8.0",
    "husky": "^4.2.5",
    "jest": "^25.5.2",
    "lint-staged": "^10.2.1",
    "prettier": "^2.0.5",
    "rewire": "^5.0.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^25.4.0",
    "ts-node": "^8.9.1",
    "tsconfig-paths": "^3.9.0",
    "tscpaths": "^0.0.9",
    "typescript": "^3.8.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
